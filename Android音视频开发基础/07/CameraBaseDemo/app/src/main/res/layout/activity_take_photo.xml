<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/take_photo_by_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用默认Intent拍照"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/take_photo_to_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照，图片保存至缓存目录"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/take_photo_to_custompath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照，图片保存至自定义路径"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/take_photo_to_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照，图片保存至自定义路径并且添加到相册"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/take_photo_to_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照，图片进行缩放处理"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/choose_from_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相册选图片，并且显示"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/picture_scale"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>